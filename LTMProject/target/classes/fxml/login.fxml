<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.mycompany.ltmproject.controller.LoginController"
            prefWidth="400" prefHeight="320"
            style="-fx-background-color: linear-gradient(to bottom right, #2193b0, #6dd5ed);">

    <children>
        <!-- Khối form bo tròn nổi bật -->
        <AnchorPane layoutX="50" layoutY="100" prefWidth="300" prefHeight="180"
                    style="-fx-background-color: rgba(255,255,255,0.98); -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, #2193b0, 8, 0.2, 0, 2);">
            <children>
                <Label text="ĐĂNG NHẬP" layoutX="86" layoutY="12"
                       style="-fx-font-size: 19px; -fx-font-weight: bold; -fx-text-fill: #2193b0;"/>
                <TextField fx:id="usernameField" layoutX="30" layoutY="50" prefWidth="240" promptText="Tên đăng nhập"
                           style="-fx-background-radius: 10; -fx-border-radius: 10;"/>
                <PasswordField fx:id="passwordField" layoutX="30" layoutY="90" prefWidth="240" promptText="Mật khẩu"
                               style="-fx-background-radius: 10; -fx-border-radius: 10;"/>
                <Button text="Đăng nhập" layoutX="30" layoutY="135" prefWidth="110"
                        style="-fx-background-color: linear-gradient(to right, #2193b0, #6dd5ed); -fx-background-radius: 10; -fx-font-weight: bold; -fx-text-fill: white;"
                        onAction="#handleLogin"/>
                <Button text="Đăng ký" layoutX="160" layoutY="135" prefWidth="110"
                        style="-fx-background-color: transparent; -fx-border-color: #2193b0; -fx-border-radius: 10; -fx-text-fill: #2193b0; -fx-font-weight: bold;"
                        onAction="#handleRegister"/>
                <Label fx:id="statusLabel" layoutX="25" layoutY="168" prefWidth="250"
                       style="-fx-text-fill: red; -fx-font-size: 12px;"/>
            </children>
        </AnchorPane>
        <!-- Ghi chú nhỏ dưới cùng (nếu cần) -->
        <Label text="© 2025 Game Đếm số đồ vật" layoutX="125" layoutY="295"
               style="-fx-text-fill: white; -fx-font-size: 12px;"/>
    </children>
</AnchorPane>
