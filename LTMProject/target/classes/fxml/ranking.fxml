<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            prefWidth="400" prefHeight="300"
            style="-fx-background-color: linear-gradient(to bottom right, #2193b0, #6dd5ed);">
    <children>
        <Label text="Bảng xếp hạng" layoutX="130" layoutY="20"
               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;"/>

        <TableView layoutX="50" layoutY="60" prefWidth="300" prefHeight="180">
            <columns>
                <TableColumn text="Top" prefWidth="60"/>
                <TableColumn text="Username" prefWidth="140"/>
                <TableColumn text="Điểm" prefWidth="100"/>
            </columns>
        </TableView>

        <Button text="Trở về" layoutX="160" layoutY="250" prefWidth="80"
                style="-fx-background-color: white; -fx-border-radius: 8; -fx-background-radius: 8;"/>
    </children>
</AnchorPane>

