<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.mycompany.ltmproject.controller.HistoryController"
           minWidth="800" prefWidth="800" maxWidth="800"
           minHeight="520" prefHeight="520" maxHeight="520"
           style="-fx-background-color: linear-gradient(to bottom right, #2193b0, #6dd5ed);">

    <children>
        <AnchorPane minWidth="520" prefWidth="520" maxWidth="520"
                    minHeight="380" prefHeight="380" maxHeight="380"
                    style="-fx-background-color: rgba(255,255,255,0.98);
                           -fx-background-radius: 20;
                           -fx-effect: dropshadow(gaussian, #2193b0, 12, 0.2, 0, 3);">

            <children>
                <!-- Tiêu đề -->
                <Label text="LỊCH SỬ ĐẤU" layoutX="180" layoutY="20"
                       style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2193b0;"/>

                <!-- Bảng lịch sử -->
                <TableView fx:id="historyTable" layoutX="50" layoutY="70" prefWidth="420" prefHeight="220">
                    <columns>
                        <TableColumn fx:id="colDate" text="Thời Gian" prefWidth="100"/>
                        <TableColumn fx:id="colOpponent" text="Đối Thủ" prefWidth="120"/>
                        <TableColumn fx:id="colStatus" text="Kết Quả" prefWidth="100"/>
                        <TableColumn fx:id="colScore" text="Điểm" prefWidth="100"/>
                    </columns>
                </TableView>

                <!-- Nút trở về -->
                <Button fx:id="backButton" text="Trở về" layoutX="200" layoutY="310" prefWidth="120" prefHeight="36"
                        style="-fx-background-color: transparent; -fx-border-color: #2193b0;
                               -fx-border-radius: 10; -fx-text-fill: #2193b0; -fx-font-weight: bold;"
                        onAction="#handleBack"/>
            </children>
        </AnchorPane>
    </children>
</StackPane>
