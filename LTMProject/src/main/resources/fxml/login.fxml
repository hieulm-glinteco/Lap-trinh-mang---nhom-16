<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.mycompany.ltmproject.controller.LoginController"
            prefWidth="800" prefHeight="520"
            style="-fx-background-color: linear-gradient(to bottom right, #2193b0, #6dd5ed);">

    <children>
        <!-- FORM: phóng to và đặt giữa (layoutX/Y tính tay) -->
        <AnchorPane layoutX="190" layoutY="130" prefWidth="420" prefHeight="260"
                    style="-fx-background-color: rgba(255,255,255,0.98);
                           -fx-background-radius: 20;
                           -fx-effect: dropshadow(gaussian, #2193b0, 12, 0.2, 0, 3);">
            <children>
                <Label text="ĐĂNG NHẬP" layoutX="150" layoutY="18"
                       style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2193b0;"/>

                <TextField fx:id="usernameField" layoutX="40" layoutY="70" prefWidth="340" promptText="Tên đăng nhập"
                           style="-fx-font-size: 14px; -fx-background-radius: 10; -fx-border-radius: 10;"/>
                <PasswordField fx:id="passwordField" layoutX="40" layoutY="115" prefWidth="340" promptText="Mật khẩu"
                               style="-fx-font-size: 14px; -fx-background-radius: 10; -fx-border-radius: 10;"/>

                <Button fx:id="loginButton"  text="Đăng nhập" layoutX="40" layoutY="165" prefWidth="160" prefHeight="36"
                        style="-fx-background-color: linear-gradient(to right, #2193b0, #6dd5ed);
                               -fx-background-radius: 10; -fx-font-weight: bold; -fx-text-fill: white;"
                        onAction="#handleLogin"/>
                <Button text="Đăng ký" layoutX="220" layoutY="165" prefWidth="160" prefHeight="36"
                        style="-fx-background-color: transparent; -fx-border-color: #2193b0;
                               -fx-border-radius: 10; -fx-text-fill: #2193b0; -fx-font-weight: bold;"
                        onAction="#handleRegister"/>

                <Label fx:id="statusLabel" layoutX="40" layoutY="215" prefWidth="340"
                       style="-fx-text-fill: red; -fx-font-size: 13px;"/>
            </children>
        </AnchorPane>

        <Label text="© 2025 Game Đếm số đồ vật" layoutX="315" layoutY="488"
               style="-fx-text-fill: white; -fx-font-size: 12px;"/>
    </children>
</AnchorPane>
