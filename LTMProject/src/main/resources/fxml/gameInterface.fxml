<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.mycompany.ltmproject.controller.GameController"
            prefWidth="1056" prefHeight="682"
            style="-fx-background-color: linear-gradient(to bottom right, #e0f0ff, #ffffff);">

    <!-- KHUNG TRẮNG CHÍNH -->
    <AnchorPane layoutX="44" layoutY="33" prefWidth="968" prefHeight="616"
                style="-fx-background-color: white;
                       -fx-background-radius: 15;
                       -fx-border-color: #3399ff;
                       -fx-border-radius: 15;
                       -fx-effect: dropshadow(gaussian, #2f80ed, 10, 0.3, 0, 3);">

        <!-- TIÊU ĐỀ Ở GIỮA -->
        <Label text="ĐẾM SỐ LƯỢNG CON VẬT" layoutX="270" layoutY="30"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2f80ed;" />

        <!-- THỜI GIAN BÊN TRÁI TRÊN -->
        <Label text="Thời gian:" layoutX="40" layoutY="80"
               style="-fx-font-size: 14px; -fx-text-fill: #000;" />
        <Label fx:id="lblTimeLeft" text="30s" layoutX="115" layoutY="80"
               style="-fx-font-size: 16px; -fx-text-fill: red; -fx-font-weight: bold;" />

        <!-- ĐIỂM NGƯỜI CHƠI NGAY DƯỚI BỘ ĐẾM -->
        <Label text="Điểm bạn:" layoutX="40" layoutY="120"
               style="-fx-font-size: 14px; -fx-text-fill: #000;" />
        <Label fx:id="scorePlayer1" text="0" layoutX="120" layoutY="120"
               style="-fx-font-size: 14px; -fx-text-fill: green; -fx-font-weight: bold;" />

        <Label text="Điểm đối thủ:" layoutX="40" layoutY="150"
               style="-fx-font-size: 14px; -fx-text-fill: #000;" />
        <Label fx:id="scorePlayer2" text="0" layoutX="145" layoutY="150"
               style="-fx-font-size: 14px; -fx-text-fill: orange; -fx-font-weight: bold;" />

        <!-- VÒNG ĐẤU -->
        <Label text="Vòng đấu:" layoutX="700" layoutY="80"
               style="-fx-font-size: 14px; -fx-text-fill: #000;" />
        <Label fx:id="lblRound" text="Vòng 0/5" layoutX="780" layoutY="80"
               style="-fx-font-size: 16px; -fx-text-fill: #2f80ed; -fx-font-weight: bold;" />

        <!-- HÌNH ẢNH CON VẬT -->
        <ImageView fx:id="animalImageView" layoutX="220" layoutY="150"
                   fitWidth="440" fitHeight="260"
                   preserveRatio="true"
                   style="-fx-border-color: #2f80ed; -fx-border-radius: 10;" />

        <!-- NHẬP DỮ LIỆU -->
        <Label text="Số lượng Voi:" layoutX="220" layoutY="450"
               style="-fx-font-size: 14px; -fx-text-fill: #2f80ed; -fx-font-weight: bold;" />
        <TextField fx:id="txtElephant" layoutX="360" layoutY="445" prefWidth="140"
                   style="-fx-background-radius: 10; -fx-border-radius: 10;" />

        <Label text="Số lượng Hải cẩu:" layoutX="220" layoutY="495"
               style="-fx-font-size: 14px; -fx-text-fill: #2f80ed; -fx-font-weight: bold;" />
        <TextField fx:id="txtSeal" layoutX="360" layoutY="490" prefWidth="140"
                   style="-fx-background-radius: 10; -fx-border-radius: 10;" />

        <Label text="Số lượng Cáo:" layoutX="220" layoutY="540"
        style="-fx-font-size: 14px; -fx-text-fill: #2f80ed; -fx-font-weight: bold;" />
        <TextField fx:id="txtFox" layoutX="360" layoutY="535" prefWidth="140"
                   style="-fx-background-radius: 10; -fx-border-radius: 10;" />

        <!-- NÚT GỬI -->
        <Button fx:id="btnSubmit" text="Gửi" layoutX="560" layoutY="500" prefWidth="140" prefHeight="40"
                style="-fx-background-color: linear-gradient(to right, #56ccf2, #2f80ed);
                       -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 15;" />
        
        <!-- NÚT THOÁT -->
        <Button fx:id="btnQuit" text="Thoát" layoutX="760" layoutY="30" prefWidth="100" prefHeight="34"
                style="-fx-background-color: linear-gradient(to right, #ff6b6b, #ee5a6f);
                       -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" />
    </AnchorPane>
</AnchorPane>
